#include <stdio.h>
void add2DArrays(int rows, int cols, int array1[rows][cols], int array2[rows][cols], int result[rows][cols]) 
{
    for (int i=0;i<rows;i++)
    {
        for (int j=0;j<cols;j++)
        {
            result[i][j] =array1[i][j] + array2[i][j];
        }
    }
}

int main() 
{
    int rows = 2, cols = 2;
    int array1[2][2] = {{1,2}, {3,4}};
    int array2[2][2] = {{5,6}, {7,8}};
    int result[2][2];

    add2DArrays(rows,cols,array1,array2,result);
    printf("Sum of 2D arrays:\n");
    for (int i=0;i<rows;i++)
    {
        for (int j=0;j<cols;j++) 
        {
            printf(" %d ",result[i][j]);
        }
        printf("\n");
    }
    return 0;
}
