#include<stdio.h>
int sumofdigits(int n);
int sumofdigits(int n)
{
    int sum=0;
    while(n>=1)
    {
        sum=sum+n%10;
        n=sumofdigits(n/10);
    }
    return sum;
}
int main()
{
    int p;
    printf("enter the number:");
    scanf("%d",&p);
    printf("the sum of digitsof %d is %d",p,sumofdigits(p));
    return 0;
}
